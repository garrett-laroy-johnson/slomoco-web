---
layout: base.njk
---

<div class="row masonry" data-masonry='{"percentPosition": true }'>
  {% for i in images | shuffle %}

  <div class="col-sm-4 my-2">
    <a href="{{ i }}">
      <img src="{{ i }}" class="img-fluid" alt="" />
    </a>
  </div>
  {% endfor %}
</div>

<script>
  $(function () {
    /* 瀑布流區塊div */
    var $container = $(".masonry");

    //當圖片讀取完畢才執行
    $container.imagesLoaded(function () {
      //選擇瀑布流的區塊名稱
      $container.masonry({
        itemSelector: ".item",
      });
    });
  });
</script>
